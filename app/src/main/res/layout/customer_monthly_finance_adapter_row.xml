<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/DP_180"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/DP_8"
        android:background="@drawable/shape_chip_drawable">

    <TextView
        android:id="@+id/txt_SDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Time 30-05-2020"
        android:textColor="@color/black_color"
        android:textSize="@dimen/DP_9"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/DP_14"
        android:layout_marginLeft="@dimen/DP_8"
        android:layout_marginRight="@dimen/DP_8">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            app:cardCornerRadius="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="20">


                        <LinearLayout
                            android:id="@+id/date_linear"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/DP_10"
                            android:weightSum="10">

                            <TextView
                                android:id="@+id/txt_AmtDate_Day"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3.3"
                                android:textSize="@dimen/DP_20"
                                android:textColor="@color/black_color"
                                android:text="17"
                                android:gravity="center"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/txt_AmtDate_Month"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3.3"
                                android:textSize="@dimen/DP_14"
                                android:textColor="@color/black_color"
                                android:text="June"
                                android:gravity="center"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:id="@+id/txt_AmtDate_Year"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3.3"
                                android:textSize="@dimen/DP_18"
                                android:textColor="@color/black_color"
                                android:text="2020"
                                android:gravity="center"
                                android:textStyle="bold"
                                />
                        </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="55">

                    <LinearLayout
                        android:id="@+id/Amt_linear"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="6"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="6"
                                android:orientation="horizontal"
                                android:layout_marginLeft="@dimen/DP_5"
                                android:layout_marginTop="@dimen/DP_12"
                                android:layout_marginBottom="@dimen/DP_12">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textSize="@dimen/DP_12"
                                    android:textColor="@color/dark_gray"
                                    android:text="â‚¹ "
                                    android:textStyle="bold"></TextView>

                                <TextView
                                    android:id="@+id/txt_TotlAmtVal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/DP_22"
                                    android:textColor="@color/black_color"
                                    android:text="TotalAmount"
                                    android:textStyle="bold"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:orientation="vertical"
                                android:layout_marginTop="@dimen/DP_15">

                                <TextView
                                    android:id="@+id/txt_STimeLable"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/DP_10"
                                    android:textColor="@color/dark_gray"
                                    android:text="Time"
                                    android:gravity="center"
                                    android:textStyle="bold"/>
                                <TextView
                                    android:id="@+id/txt_STimeVal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/DP_12"
                                    android:textColor="@color/black_color"
                                    android:text="Time"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="4"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="5"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txt_BasicAmtLable"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/DP_10"
                                    android:textColor="@color/dark_gray"
                                    android:text="Basic Amount"
                                    android:gravity="center"
                                    android:textStyle="bold"/>
                                <TextView
                                    android:id="@+id/txt_BasicAmtVal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/DP_16"
                                    android:textColor="@color/black_color"
                                    android:text="Amount"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="5"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txt_InterestLable"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/DP_10"
                                    android:textColor="@color/dark_gray"
                                    android:text="Interest"
                                    android:gravity="center"
                                    android:textStyle="bold"/>
                                <TextView
                                    android:id="@+id/txt_InterestVal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/DP_16"
                                    android:textColor="@color/black_color"
                                    android:text="Interst"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    />

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="25">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/DP_10">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/txt_interstLable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/DP_10"
                            android:textColor="@color/dark_gray"
                            android:text="Balance Amount"
                            android:textStyle="bold"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/txt_interstLableVal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/DP_16"
                            android:textColor="@color/black_color"
                            android:text="Fine"
                            android:layout_below="@+id/txt_interstLable"
                            android:gravity="center"
                            android:textStyle="bold"
                            />

                            <TextView
                                android:id="@+id/txt_FineLable"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/DP_10"
                                android:textColor="@color/dark_gray"
                                android:text="Fine\/Penalty"
                                android:layout_below="@+id/txt_interstLableVal"
                                android:textStyle="bold"
                                android:gravity="center"
                                />
                            <TextView
                                android:id="@+id/txt_FineVal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/DP_16"
                                android:textColor="@color/black_color"
                                android:text="Fine"
                                android:layout_below="@+id/txt_FineLable"
                                android:gravity="center"
                                android:textStyle="bold"
                                />

                        </RelativeLayout>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>



        </androidx.cardview.widget.CardView>




    </LinearLayout>


</LinearLayout>